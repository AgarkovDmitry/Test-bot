{
  "defaultSeverity": "error",
  "extends": ["tslint:latest", "tslint:recommended"],
  "jsRules": {},
  "rules": {
    "no-implicit-dependencies": false,
    "jsx-boolean-value": ["always", { "never": ["exact"] }],
    "jsx-no-lambda": ["always", { "never": ["onClick"] }],
    "jsx-no-multiline-js": false,
    "interface-name": [false],
    "member-access": [false],
    "no-submodule-imports": false,
    "arrow-parens": [true, "ban-single-arg-parens"],
    "indent": [true, "spaces", 2],
    "max-classes-per-file": [true, 10, "exclude-class-expressions"],
    "max-line-length": [false, 100],
    "member-ordering": [false, "variables-before-functions"],
    "no-duplicate-variable": true,
    "no-shadowed-variable": false,
    "no-trailing-whitespace": true,
    "object-literal-sort-keys": [false],
    "one-line": [true,
      "check-catch",
      "check-else",
      "check-open-brace",
      "check-whitespace"
    ],
    "ordered-imports": [false],
    "quotemark": [true, "single"],
    "trailing-comma": [true, {
      "singleline": "never",
      "multiline": {
        "objects": "always",
        "arrays": "always",
        "functions": "never",
        "typeLiterals": "ignore"
      }
    }],
    "variable-name": {
      "options": [
        "allow-leading-underscore",
        "allow-pascal-case",
        "allow-snake-case",
        "check-format"
      ]
    },
    "semicolon": [true, "never"],
    "object-literal-key-quotes": [false, "always"],
    "no-var-requires": false,
    "no-console":false
  }
}
